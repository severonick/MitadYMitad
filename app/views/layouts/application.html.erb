<!DOCTYPE html>
<html>
<head>
  <title>MitadYMitad</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
 
 <div class="container">
 <a href="#" class="navbar-brand">Hagamosvaca.com</a>
      <ul class="nav navbar-nav">
      <li class="active"><%= link_to "Status", timeline_path %></li>
      

      </ul>

      <ul class="nav navbar-nav pull-right">
       <% if user_signed_in? %>
       <li><%= link_to current_user.nombre_completo, edit_user_registration_path %></li>
       <li><%= link_to "cerrar sesion", destroy_user_session_path, method: :delete %></li>

       <% else %>

      <li><%= link_to "registrar", registrar_path %></li>
      <li><%= link_to "iniciar sesion", comenzar_path %></li>


       <% end %>

      </ul>
 	  
 </div>
 	
 </div>
	
</div>

<div class="container">

   <% flash.each do | type, message| %>
       <% end %>
    <% if flash[:notice] %>

    <div class="alert alert-success alert-dismissable">
       <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">x</span></button>
       <%= flash[:notice] %>
    </div>

<% end %>
     
     <% if flash[:alert] %>

    <div class="alert alert-danger alert-dismissable">
       <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">x</span></button>
       <%= flash[:alert] %>
    </div>
      
    <% end %>
     
<%= yield %>
</div>

</body>
</html>
