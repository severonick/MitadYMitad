<div class="row">
<div class="span4">

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "well"}) do |f| %>
  
<fieldset>
<legend>Iniciar session</legend>

 <%= f.input :email %>
<%= f.input :password %>
  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.input :remember_me, as: :boolean %>
      
    </div>
  <% end -%>

  <div class="actions">
    <%= f.button :submit, "Iniciar session" %>

  </div>
  </fieldset>
<% end %>

<%= render "devise/shared/links" %>
</div>

 <div class="span8">
   
   <h2>Bienvenido a hagamosvaca.com, solo coloca tu propuesta</h2>

 </div>

</div>